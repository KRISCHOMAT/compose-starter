{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["/**/*.ts"],
  "exclude": ["node_modules", "types"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
